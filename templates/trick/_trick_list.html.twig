{% for trick in tricks %}
    <div class="col-md-4 col-lg-3 my-3">
        {% if trick.featuredImage %}
            {% set background = trick_image(trick.featuredImage) %}
        {% elseif trick.images|length > 0 %}
            {% set background = trick_image(trick.images[0].filename) %}
        {% else %}
            {% set background = asset('assets/2e16d0bac756.jpg') %}
        {% endif %}
        <div class="card card-trick">
            <img src="{{ background }}" class="miniature card-img-top" alt="image illustrant un trick {{ trick.name }}">
            <div class="card-body">
                <div class="row">
                    <div class="col-9">
                        <h5 class="card-title h5 mb-0">
                            <a href="{{ path('app_trick_show', {slug: trick.slug }) }}">{{ trick.name }}</a>
                        </h5>
                    </div>
                    <div class="col-3 d-flex justify-content-between">
                        {% if is_granted('ROLE_USER') %}
                            <a href="{{ path('app_trick_edit', {'id': trick.id}) }}" class="text-decoration-none text-success mb-0 h5">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            {{ include('trick/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}