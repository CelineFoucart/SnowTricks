{% extends 'base.html.twig' %}

{% block title %}Accueil {% endblock %}

{% block body %}
    <header class="header-index position-relative">
        <h1 class="display-4 text-center">{{ app_description }}</h1>
        <a href="#tricks" class="position-absolute bottom-0 end-0 text-reset text-decoration-none fs-1 p-2">
            <i class="fas fa-arrow-down"></i>
        </a>
    </header>

    <article class="container my-5" id="tricks">
        {% if is_granted('ROLE_USER') %}
            <div class="text-end">
                <a href="{{ path('app_trick_new') }}" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Ajouter</a>
            </div>
        {% endif %}
        <div class="row">
            {% for trick in tricks %}
                <div class="col-md-4 col-lg-3 my-3">
                    {% if trick.featuredImage %}
                        {% set background = trick_image(trick.featuredImage) %}
                    {% elseif trick.images|length > 0 %}
                        {% set background = trick_image(trick.images[0].filename) %}
                    {% else %}
                        {% set background = asset('assets/2e16d0bac756.jpg') %}
                    {% endif %}
                    <div class="card">
                        <img src="{{ background }}" class="miniature card-img-top" alt="image illustrant un trick {{ trick.name }}">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-9">
                                    <h5 class="card-title h5 mb-0">
                                        <a href="{{ path('app_trick_show', {slug: trick.slug }) }}">{{ trick.name }}</a>
                                    </h5>
                                </div>
                                <div class="col-3 d-flex justify-content-between">
                                    {% if is_granted('ROLE_USER') %}
                                        <a href="{{ path('app_trick_edit', {'id': trick.id}) }}" class="text-decoration-none text-success mb-0 h5">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                        {{ include('trick/_delete_form.html.twig') }}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% if currentRecords < total %}
            <footer class="text-center">
                <a href="" class="btn btn-primary"><i class="fas fa-spinner fa-fw"></i> Charger plus</a>
            </footer>
        {% endif %}
    </article>

    <div class="text-end me-3">
        <a href="#" class="text-reset text-decoration-none fs-1"><i class="fas fa-arrow-up"></i></a>
    </div>
{% endblock %}
