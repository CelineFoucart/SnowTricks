{% extends 'base.html.twig' %}

{% block title %}S'inscrire {{ parent() }} {% endblock %}

{% block body %}
    <header class="header-index">
        <h1 class="mb-5 display-2 font-weight-normal text-center">Inscription</h1>
    </header>

    <article class="container my-5">
        <div class="row">
            <div class="col-md-7 p-5 border mx-auto shadow">
                <h2 class="h3 text-center mb-4">Inscrivez-vous pour contribuer</h2>
                {% include "components/_flashes.html.twig" %}

                {{ form_start(registrationForm) }}
                    {{ form_label(registrationForm.username) }}
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        {{ form_widget(registrationForm.username) }}
                    </div>
                    {{ form_errors(registrationForm.username) }}

                    {{ form_label(registrationForm.email) }}
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        {{ form_widget(registrationForm.email) }}
                    </div>
                    {{ form_errors(registrationForm.email) }}

                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword) }}
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                            {{ form_widget(registrationForm.plainPassword) }}
                            <span class="input-group-text" role="button" onclick="togglePassword(this, '#registration_form_plainPassword')">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>
                        {{ form_help(registrationForm.plainPassword) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">S'inscrire</button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Déjà un compte ? <a href="{{ path('app_login') }}" class="link-danger">Connectez-vous</a>.
                        </p>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </article>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('assets/js/toggle-password.js') }}"></script>
{% endblock %}
